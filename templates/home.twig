{{ entry.blogs.blogPostTitle}}
</div>
{% endfor %}
</div>
</section>


<section class="waarom">
<div>
<h1>{{ entry.waaromTitle }}</h1>
<p>{{ entry.waarom }}</p>
</div>
</section>

<section class="zelf">
<div>
<h1>{{ entry.zelfDoenTitle }}</h1>
