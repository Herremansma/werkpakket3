{% extends "index" %}

{% block content %}

{% set image = entry.heroImage.one() %}
<section class="hero">
<div>
<h1>{{ entry.heroTitle }}</h1>
</div>
</section>

<section>
<div>
<h1>{{ entry.nuInDeTuin }}</h1>
{% for blogPost in entry.blogs.all() %}
